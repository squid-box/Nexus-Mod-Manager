<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="4.0" DefaultTargets="Build" InitialTargets="EnsureWixToolsetInstalled" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <PropertyGroup>
    <Configuration Condition=" '$(Configuration)' == '' ">Release</Configuration>
    <Platform Condition=" '$(Platform)' == '' ">x64</Platform>
    <ProductVersion>3.10</ProductVersion>
    <ProjectGuid>0ad13aab-c5a2-4367-ae9b-d3822dcdb64d</ProjectGuid>
    <SchemaVersion>2.0</SchemaVersion>
    <OutputType>Package</OutputType>
    <OutputName>NexusModManager</OutputName>
    <OutputPath>..\Stage\Installer\</OutputPath>
    <IntermediateOutputPath>..\Stage\obj\$(Configuration)\</IntermediateOutputPath>
  </PropertyGroup>
  <PropertyGroup Condition=" '$(Configuration)|$(Platform)' == 'Release|x86' " />
  <PropertyGroup Condition=" '$(Configuration)|$(Platform)' == 'Release|x64' ">
    <SuppressIces>
    </SuppressIces>
    <SuppressValidation>False</SuppressValidation>
  </PropertyGroup>
  <ItemGroup>
    <Compile Include="Product.wxs" />
  </ItemGroup>
  <Import Project="$(WixTargetsPath)" Condition=" '$(WixTargetsPath)' != '' " />
  <Import Project="$(MSBuildExtensionsPath32)\Microsoft\WiX\v3.x\Wix.targets" Condition=" '$(WixTargetsPath)' == '' AND Exists('$(MSBuildExtensionsPath32)\Microsoft\WiX\v3.x\Wix.targets') " />
  <Target Name="EnsureWixToolsetInstalled" Condition=" '$(WixTargetsImported)' != 'true' ">
    <Error Text="The WiX Toolset v3.11 (or newer) build tools must be installed to build this project. To download the WiX Toolset, see http://wixtoolset.org/releases/" />
  </Target>
  <Target Name="BeforeBuild">
    <CallTarget Targets="SetVersionNumberForInstaller"/>
    <CallTarget Targets="CopyFilesToInstallerTemp"/>
  </Target>
  <Target Name="SetVersionNumberForInstaller">
    <GetAssemblyIdentity AssemblyFiles="..\Stage\Release\NexusClient.exe">
      <Output TaskParameter="Assemblies" ItemName="AsmInfo" />
    </GetAssemblyIdentity>
    <CreateProperty Value="%(AsmInfo.Version)">
      <Output TaskParameter="Value" PropertyName="VersionNumber" />
    </CreateProperty>
    <CreateProperty Value="$(OutputName).$(VersionNumber)_$(Platform)">
      <Output TaskParameter="Value" PropertyName="TargetName" />
    </CreateProperty>
    <CreateProperty Value="$(TargetName)$(TargetExt)">
      <Output TaskParameter="Value" PropertyName="TargetFileName" />
    </CreateProperty>
    <CreateProperty Value="$(TargetDir)$(TargetFileName)">
      <Output TaskParameter="Value" PropertyName="TargetPath" />
    </CreateProperty>
  </Target>
  <PropertyGroup>
    <NmmFiles>..\Stage\InstallerTemp</NmmFiles>
    <DefineConstants>NmmFiles=$(NmmFiles)</DefineConstants>
  </PropertyGroup>
  <ItemGroup>
    <HarvestDirectory Include="$(NmmFiles)">
      <InProject>False</InProject>
      <SuppressRootDirectory>true</SuppressRootDirectory>
      <SuppressCom>true</SuppressCom>
      <SuppressRegistry>true</SuppressRegistry>
      <ComponentGroupName>NmmFiles</ComponentGroupName>
      <DirectoryRefID>INSTALLFOLDER</DirectoryRefID>
      <PreprocessorVariable>var.NmmFiles</PreprocessorVariable>
    </HarvestDirectory>
  </ItemGroup>
  <Target Name="CopyFilesToInstallerTemp">
    <RemoveDir Directories="..\Release\InstallerTemp" />
    <MakeDir Directories="..\Stage\InstallerTemp" />
    <ItemGroup>
      <SourceFiles Include="..\Stage\Release\**\*.dll*;..\Stage\Release\**\*.txt;..\Stage\Release\**\*.rtf" />
    </ItemGroup>
    <Copy
      SourceFiles="@(SourceFiles)"
      DestinationFiles="@(SourceFiles->'..\Stage\InstallerTemp\%(RecursiveDir)%(Filename)%(Extension)')"
        />
  </Target>
</Project>